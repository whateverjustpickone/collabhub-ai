# ============================================
# CollabHub AI Backend Configuration
# ============================================

# Environment
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/collabhub_ai?schema=public"

# Redis (for Bull queue and caching)
REDIS_URL="redis://localhost:6379"

# JWT Authentication
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-secret-key-change-this
REFRESH_TOKEN_EXPIRES_IN=30d

# ============================================
# LLM API Keys
# ============================================

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# OpenAI (GPT-4)
OPENAI_API_KEY=sk-your-openai-key-here

# Google (Gemini)
GOOGLE_API_KEY=your-google-api-key-here

# Perplexity
PERPLEXITY_API_KEY=pplx-your-key-here

# ============================================
# VERA Configuration
# ============================================

VERA_TRACKING_ENABLED=true
VERA_LOG_LEVEL=detailed
VERA_ATTRIBUTION_GRANULARITY=high
VERA_BLOCKCHAIN_ENABLED=false

# ============================================
# Security & CORS
# ============================================

CORS_ORIGIN=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# Logging
# ============================================

LOG_LEVEL=debug
LOG_DIR=./logs

# ============================================
# External Services
# ============================================

# IONOS Domain
DOMAIN=quillandpixelpublishing.com

# Email (for notifications)
SMTP_HOST=smtp.ionos.com
SMTP_PORT=587
SMTP_USER=noreply@quillandpixelpublishing.com
SMTP_PASSWORD=your-email-password

# ============================================
# Feature Flags
# ============================================

ENABLE_SESSION_RECORDING=true
ENABLE_CERTIFICATES=true
ENABLE_BLOCKCHAIN=false
ENABLE_AGENT_CONSULTATION=true
