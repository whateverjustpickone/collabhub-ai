# ============================================
# CollabHub AI - Environment Configuration
# ============================================
# Copy this file to .env and fill in your API keys

# LLM API Keys
ANTHROPIC_API_KEY=your-anthropic-api-key-here
OPENAI_API_KEY=your-openai-api-key-here
GOOGLE_AI_API_KEY=your-google-ai-api-key-here
PERPLEXITY_API_KEY=your-perplexity-api-key-here
DEEPSEEK_API_KEY=your-deepseek-api-key-here
XAI_API_KEY=your-xai-grok-api-key-here
MANUS_API_KEY=your-manus-api-key-here

# Avatar & Voice APIs
DID_API_KEY=your-did-api-key-here
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# Database (Docker will use these defaults, change for production)
DATABASE_URL=postgresql://postgres:collabhub_dev_password@localhost:5432/collabhub_ai?schema=public
REDIS_URL=redis://localhost:6379

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=dev_jwt_secret_change_in_production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=dev_refresh_secret_change_in_production
REFRESH_TOKEN_EXPIRES_IN=30d

# Application
NODE_ENV=development
PORT=3001

# CORS
CORS_ORIGIN=http://localhost:5173
